                                            <Image Source="icons/chrome.png" Height="30"/>
                                            <TextBlock Text="Browser" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,0,0"/>
                                        </StackPanel>
