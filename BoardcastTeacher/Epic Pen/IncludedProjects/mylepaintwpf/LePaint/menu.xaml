<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="myMenus">
    <Menu x:Key="myMenus">
    <MenuItem Header="File" >
        <MenuItem Header="Open" />
        <MenuItem Header="Save" />
        <MenuItem Header="Export to XML" />
        <Separator />
        <MenuItem Header="Print Preview" />
        <MenuItem Header="Print" />
        <Separator />
        <MenuItem Header="Exit" />
    </MenuItem>
    <MenuItem Header="Edit" >
            <MenuItem >
                <MenuItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <AccessText>_New...</AccessText>
                        <Ellipse Fill="Blue" Width="40" Height="15" Margin="10,0" />
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
    </MenuItem>
    </Menu>

</ResourceDictionary>